<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome/Goodbye - <%= guild.guildName %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <%- include('../partials/header') %>
    
    <div class="dashboard-container">
        <aside class="dashboard-sidebar">
            <h2><%= guild.guildName %></h2>
            <nav class="dashboard-nav">
                <a href="/dashboard/<%= guild.guildId %>">Overview</a>
                <a href="/dashboard/<%= guild.guildId %>/moderation">🛡️ Moderation</a>
                <a href="/dashboard/<%= guild.guildId %>/antiraid">🔒 Anti-Raid</a>
                <a href="/dashboard/<%= guild.guildId %>/welcome" class="active">👋 Welcome/Goodbye</a>
                <a href="/dashboard/<%= guild.guildId %>/autoroles">🎭 Auto Roles</a>
                <a href="/dashboard/<%= guild.guildId %>/leveling">📊 Leveling</a>
                <a href="/dashboard/<%= guild.guildId %>/music">🎵 Music</a>
                <a href="/dashboard/<%= guild.guildId %>/tickets">🎫 Tickets</a>
                <a href="/dashboard/<%= guild.guildId %>/custom-commands">⚙️ Custom Commands</a>
                <% if (guild.premium.enabled) { %>
                    <a href="/dashboard/<%= guild.guildId %>/premium" class="premium-link">⭐ Premium</a>
                <% } %>
            </nav>
        </aside>
        
        <main class="dashboard-main">
            <div class="dashboard-header">
                <h1>👋 Welcome & Goodbye Messages</h1>
            </div>
            
            <form class="settings-form" id="welcomeForm">
                <div class="form-section">
                    <h3>Welcome Messages</h3>
                    
                    <div class="form-group">
                        <label class="toggle-label">
                            <input type="checkbox" name="welcome.enabled" <%= guild.welcome.enabled ? 'checked' : '' %>>
                            <span class="toggle-slider"></span>
                            Enable Welcome Messages
                        </label>
                    </div>
                    
                    <div class="form-group">
                        <label for="welcomeChannel">Welcome Channel ID</label>
                        <input type="text" id="welcomeChannel" name="welcome.channel" 
                               value="<%= guild.welcome.channel || '' %>" 
                               placeholder="Enter channel ID">
                        <small>Channel where welcome messages will be sent</small>
                    </div>
                    
                    <div class="form-group">
                        <label for="welcomeMessage">Welcome Message</label>
                        <textarea id="welcomeMessage" name="welcome.message" rows="4" 
                                  placeholder="Welcome {user} to {server}!"><%= guild.welcome.message %></textarea>
                        <small>Variables: {user} - mention user, {username} - username, {server} - server name</small>
                    </div>
                    
                    <div class="form-group">
                        <label class="toggle-label">
                            <input type="checkbox" name="welcome.embed" <%= guild.welcome.embed ? 'checked' : '' %>>
                            <span class="toggle-slider"></span>
                            Send as Embed
                        </label>
                        <small>Send the welcome message as a fancy embed</small>
                    </div>
                </div>
                
                <div class="form-section">
                    <h3>Goodbye Messages</h3>
                    
                    <div class="form-group">
                        <label class="toggle-label">
                            <input type="checkbox" name="goodbye.enabled" <%= guild.goodbye.enabled ? 'checked' : '' %>>
                            <span class="toggle-slider"></span>
                            Enable Goodbye Messages
                        </label>
                    </div>
                    
                    <div class="form-group">
                        <label for="goodbyeChannel">Goodbye Channel ID</label>
                        <input type="text" id="goodbyeChannel" name="goodbye.channel" 
                               value="<%= guild.goodbye.channel || '' %>" 
                               placeholder="Enter channel ID">
                        <small>Channel where goodbye messages will be sent</small>
                    </div>
                    
                    <div class="form-group">
                        <label for="goodbyeMessage">Goodbye Message</label>
                        <textarea id="goodbyeMessage" name="goodbye.message" rows="4" 
                                  placeholder="Goodbye {user}!"><%= guild.goodbye.message %></textarea>
                        <small>Variables: {user} - username, {server} - server name</small>
                    </div>
                    
                    <div class="form-group">
                        <label class="toggle-label">
                            <input type="checkbox" name="goodbye.embed" <%= guild.goodbye.embed ? 'checked' : '' %>>
                            <span class="toggle-slider"></span>
                            Send as Embed
                        </label>
                        <small>Send the goodbye message as a fancy embed</small>
                    </div>
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
            </form>
        </main>
    </div>
    
    <%- include('../partials/footer') %>
    
    <script>
        document.getElementById('welcomeForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const data = {};
            
            // Process form data
            for (let [key, value] of formData.entries()) {
                if (key.includes('.')) {
                    const keys = key.split('.');
                    let obj = data;
                    for (let i = 0; i < keys.length - 1; i++) {
                        if (!obj[keys[i]]) obj[keys[i]] = {};
                        obj = obj[keys[i]];
                    }
                    obj[keys[keys.length - 1]] = value;
                } else {
                    data[key] = value;
                }
            }
            
            // Handle checkboxes
            const checkboxes = e.target.querySelectorAll('input[type="checkbox"]');
            checkboxes.forEach(cb => {
                const keys = cb.name.split('.');
                let obj = data;
                for (let i = 0; i < keys.length - 1; i++) {
                    if (!obj[keys[i]]) obj[keys[i]] = {};
                    obj = obj[keys[i]];
                }
                obj[keys[keys.length - 1]] = cb.checked;
            });
            
            try {
                const response = await fetch(`/api/guild/<%= guild.guildId %>`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                
                if (response.ok) {
                    alert('Settings saved successfully!');
                    location.reload();
                } else {
                    alert('Failed to save settings. Please try again.');
                }
            } catch (error) {
                alert('An error occurred. Please try again.');
            }
        });
    </script>
</body>
</html>
