<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tickets - <%= guild.guildName %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <%- include('../partials/header') %>
    
    <div class="dashboard-container">
        <aside class="dashboard-sidebar">
            <h2><%= guild.guildName %></h2>
            <nav class="dashboard-nav">
                <a href="/dashboard/<%= guild.guildId %>">Overview</a>
                <a href="/dashboard/<%= guild.guildId %>/moderation">🛡️ Moderation</a>
                <a href="/dashboard/<%= guild.guildId %>/antiraid">🔒 Anti-Raid</a>
                <a href="/dashboard/<%= guild.guildId %>/welcome">👋 Welcome/Goodbye</a>
                <a href="/dashboard/<%= guild.guildId %>/autoroles">🎭 Auto Roles</a>
                <a href="/dashboard/<%= guild.guildId %>/leveling">📊 Leveling</a>
                <a href="/dashboard/<%= guild.guildId %>/music">🎵 Music</a>
                <a href="/dashboard/<%= guild.guildId %>/tickets" class="active">🎫 Tickets</a>
                <a href="/dashboard/<%= guild.guildId %>/custom-commands">⚙️ Custom Commands</a>
                <% if (guild.premium.enabled) { %>
                    <a href="/dashboard/<%= guild.guildId %>/premium" class="premium-link">⭐ Premium</a>
                <% } %>
            </nav>
        </aside>
        
        <main class="dashboard-main">
            <div class="dashboard-header">
                <h1>🎫 Ticket System</h1>
            </div>
            
            <form class="settings-form" id="ticketsForm">
                <div class="form-section">
                    <h3>General Settings</h3>
                    
                    <div class="form-group">
                        <label class="toggle-label">
                            <input type="checkbox" name="tickets.enabled" <%= guild.tickets.enabled ? 'checked' : '' %>>
                            <span class="toggle-slider"></span>
                            Enable Ticket System
                        </label>
                    </div>
                    
                    <div class="form-group">
                        <label for="category">Ticket Category ID</label>
                        <input type="text" id="category" name="tickets.category" 
                               value="<%= guild.tickets.category || '' %>" 
                               placeholder="Enter category ID">
                        <small>Category where ticket channels will be created</small>
                    </div>
                    
                    <div class="form-group">
                        <label for="supportRoles">Support Roles (comma-separated IDs)</label>
                        <textarea id="supportRoles" name="tickets.supportRoles" rows="3" 
                                  placeholder="role_id_1, role_id_2, role_id_3"><%= guild.tickets.supportRoles.join(', ') %></textarea>
                        <small>Roles that can view and manage tickets</small>
                    </div>
                    
                    <div class="form-group">
                        <label for="transcriptChannel">Transcript Channel ID</label>
                        <input type="text" id="transcriptChannel" name="tickets.transcriptChannel" 
                               value="<%= guild.tickets.transcriptChannel || '' %>" 
                               placeholder="Enter channel ID (optional)">
                        <small>Channel where closed ticket transcripts will be sent</small>
                    </div>
                </div>
                
                <div class="info-section">
                    <h3>How It Works</h3>
                    <ul>
                        <li>Members can create tickets using <code>/ticket create</code></li>
                        <li>A private channel will be created in the specified category</li>
                        <li>Only the ticket creator and support roles can view the ticket</li>
                        <li>Staff can close tickets with <code>/ticket close</code></li>
                        <li>Transcripts are automatically saved when tickets are closed</li>
                        <li>Use <code>/ticket add [user]</code> to add someone to a ticket</li>
                        <li>Use <code>/ticket remove [user]</code> to remove someone</li>
                    </ul>
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
            </form>
        </main>
    </div>
    
    <%- include('../partials/footer') %>
    
    <script>
        document.getElementById('ticketsForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const data = {};
            
            // Process form data
            for (let [key, value] of formData.entries()) {
                if (key.includes('.')) {
                    const keys = key.split('.');
                    let obj = data;
                    for (let i = 0; i < keys.length - 1; i++) {
                        if (!obj[keys[i]]) obj[keys[i]] = {};
                        obj = obj[keys[i]];
                    }
                    obj[keys[keys.length - 1]] = value;
                } else {
                    data[key] = value;
                }
            }
            
            // Handle checkboxes
            const checkboxes = e.target.querySelectorAll('input[type="checkbox"]');
            checkboxes.forEach(cb => {
                const keys = cb.name.split('.');
                let obj = data;
                for (let i = 0; i < keys.length - 1; i++) {
                    if (!obj[keys[i]]) obj[keys[i]] = {};
                    obj = obj[keys[i]];
                }
                obj[keys[keys.length - 1]] = cb.checked;
            });
            
            // Handle support roles array
            if (data.tickets?.supportRoles) {
                data.tickets.supportRoles = data.tickets.supportRoles
                    .split(',')
                    .map(r => r.trim())
                    .filter(r => r.length > 0);
            }
            
            try {
                const response = await fetch(`/api/guild/<%= guild.guildId %>`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                
                if (response.ok) {
                    alert('Settings saved successfully!');
                    location.reload();
                } else {
                    alert('Failed to save settings. Please try again.');
                }
            } catch (error) {
                alert('An error occurred. Please try again.');
            }
        });
    </script>
</body>
</html>
