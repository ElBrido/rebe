<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Developer Panel - Aura Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <%- include('../partials/header') %>
    
    <div class="dashboard-container">
        <aside class="dashboard-sidebar">
            <h2>üîß Developer Panel</h2>
            <nav class="dashboard-nav">
                <a href="/dev" class="active">üìä Overview</a>
                <a href="/dev/guilds">üè∞ Guilds</a>
            </nav>
        </aside>
        
        <main class="dashboard-main">
            <div class="dashboard-header">
                <h1>üîß Developer Panel</h1>
                <span class="badge badge-error">ADMIN ACCESS</span>
            </div>
            
            <div class="stats-grid">
                <div class="stat-card">
                    <h3>Total Guilds</h3>
                    <p class="stat-value"><%= stats.totalGuilds %></p>
                </div>
                <div class="stat-card">
                    <h3>Premium Guilds</h3>
                    <p class="stat-value"><%= stats.premiumGuilds %></p>
                </div>
                <div class="stat-card">
                    <h3>Total Users</h3>
                    <p class="stat-value"><%= stats.totalUsers %></p>
                </div>
                <div class="stat-card">
                    <h3>Premium Rate</h3>
                    <p class="stat-value"><%= stats.totalGuilds > 0 ? Math.round((stats.premiumGuilds / stats.totalGuilds) * 100) : 0 %>%</p>
                </div>
            </div>
            
            <div class="form-section">
                <h3>Top 10 Guilds by Usage</h3>
                <table class="dev-table">
                    <thead>
                        <tr>
                            <th>Guild Name</th>
                            <th>Guild ID</th>
                            <th>Commands Used</th>
                            <th>Mod Actions</th>
                            <th>Premium</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% stats.topGuilds.forEach(guild => { %>
                            <tr>
                                <td><%= guild.guildName %></td>
                                <td><code><%= guild.guildId %></code></td>
                                <td><%= guild.stats.commandsUsed %></td>
                                <td><%= guild.stats.moderationActions %></td>
                                <td>
                                    <% if (guild.premium.enabled) { %>
                                        <span class="badge badge-premium">Tier <%= guild.premium.tier %></span>
                                    <% } else { %>
                                        <span class="badge">Free</span>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            
            <div class="form-section">
                <h3>Quick Actions</h3>
                <div class="quick-actions">
                    <a href="/dev/guilds" class="btn btn-primary">Manage Guilds</a>
                    <button onclick="showGrantPremiumModal()" class="btn btn-secondary">Grant Premium</button>
                    <button onclick="showBlacklistModal()" class="btn btn-danger">Blacklist User</button>
                </div>
            </div>
        </main>
    </div>
    
    <!-- Grant Premium Modal -->
    <div id="grantPremiumModal" class="modal" style="display: none;">
        <div class="modal-content">
            <h2>Grant Premium</h2>
            <form id="grantPremiumForm">
                <div class="form-group">
                    <label for="guildId">Guild ID</label>
                    <input type="text" id="guildId" name="guildId" required>
                </div>
                <div class="form-group">
                    <label for="tier">Premium Tier</label>
                    <select id="tier" name="tier" required>
                        <option value="1">Tier 1</option>
                        <option value="2">Tier 2</option>
                        <option value="3">Tier 3</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="days">Duration (days)</label>
                    <input type="number" id="days" name="days" value="30" required>
                </div>
                <div class="modal-actions">
                    <button type="submit" class="btn btn-primary">Grant</button>
                    <button type="button" onclick="closeModal('grantPremiumModal')" class="btn btn-secondary">Cancel</button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Blacklist User Modal -->
    <div id="blacklistModal" class="modal" style="display: none;">
        <div class="modal-content">
            <h2>Blacklist User</h2>
            <form id="blacklistForm">
                <div class="form-group">
                    <label for="userId">User ID</label>
                    <input type="text" id="userId" name="userId" required>
                </div>
                <div class="form-group">
                    <label for="reason">Reason</label>
                    <textarea id="reason" name="reason" rows="3" required></textarea>
                </div>
                <div class="modal-actions">
                    <button type="submit" class="btn btn-danger">Blacklist</button>
                    <button type="button" onclick="closeModal('blacklistModal')" class="btn btn-secondary">Cancel</button>
                </div>
            </form>
        </div>
    </div>
    
    <%- include('../partials/footer') %>
    
    <script>
        function showGrantPremiumModal() {
            document.getElementById('grantPremiumModal').style.display = 'flex';
        }
        
        function showBlacklistModal() {
            document.getElementById('blacklistModal').style.display = 'flex';
        }
        
        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
        }
        
        document.getElementById('grantPremiumForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());
            data.tier = parseInt(data.tier);
            data.days = parseInt(data.days);
            
            try {
                const response = await fetch('/api/dev/premium/grant', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                
                if (response.ok) {
                    alert('Premium granted successfully!');
                    closeModal('grantPremiumModal');
                    location.reload();
                } else {
                    alert('Failed to grant premium.');
                }
            } catch (error) {
                alert('An error occurred.');
            }
        });
        
        document.getElementById('blacklistForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData.entries());
            
            try {
                const response = await fetch('/api/dev/blacklist/user', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                
                if (response.ok) {
                    alert('User blacklisted successfully!');
                    closeModal('blacklistModal');
                } else {
                    alert('Failed to blacklist user.');
                }
            } catch (error) {
                alert('An error occurred.');
            }
        });
    </script>
</body>
</html>
